@model IEnumerable<FileUploadSample2.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        .double-nav .breadcrumb-dn {
            color: #fff;
        }
    </style>
    <script>
        $(".button-collapse").sideNav();

        new WOW().init();
    </script>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>CourseWare - HTML5 Template By Jewel Theme</title>
    <meta name="description" content="CourseWare - HTML5 Template By Jewel Theme">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- favicon -->
    <link rel="icon" href="~/LandingTemplate/images/favicon.png" sizes="32x32">
    <link rel="icon" href="~/LandingTemplate/images/favicon-300x300.png" sizes="192x192">
    <link rel="icon" href="~/LandingTemplate/images/favicon-300x300.png" />
    <link rel="apple-touch-icon-precomposed" href="images/favicon-300x300.png">

    <!-- Import Template Icons CSS Files -->
    <link href="~/LandingTemplate/assets/css/simple-line-icons.css" rel="stylesheet" />
    <link href="~/LandingTemplate/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="assets/css/simple-line-icons.css">

    <!-- Import Bootstrap CSS File -->

    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link href="~/LandingTemplate/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Import External CSS Files -->
    <link href="~/LandingTemplate/assets/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/LandingTemplate/assets/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/LandingTemplate/assets/css/selectric.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="assets/css/magnific-popup.css">
    <link rel="stylesheet" href="assets/css/selectric.css">

    <!-- Import Template's CSS Files -->
    <link href="~/LandingTemplate/assets/css/style.css" rel="stylesheet" />
    <link href="~/LandingTemplate/assets/css/responsive.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="assets/css/responsive.css">
    <script src="~/courseware/assets/js/jquery.selectric.js"></script>
    <script src="~/courseware/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/courseware/assets/js/jquery-ui.min.js"></script>
    <script src="~/courseware/assets/js/main.js"></script>
    <script src="~/courseware/assets/js/plugins.js"></script>
</head>
<body>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPicture)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        <img src="@item.GetInLineImgSource()" height="50px" width="60px" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <section>
        <div class="section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                        <div class="shop-items text-center">

                            <div class="row">
                                @foreach (var it in Model)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="item">

                                            <img width="200" height="200" src="@it.GetInLineImgSource()" />
                                            <h3 class="item-title"><a href="#">@it.ProductName</a></h3><!-- /.item-title -->
                                            <span class="current-price">@it.Price</span><!-- /.current-price -->
                                            <p>
                                                Duis aute irure dolor in reprehen
                                            </p>
                                            @if (SignInManager.IsSignedIn(User))
                                            {
                                                <a asp-action="Edit" asp-route-id="@it.ProductId">Edit</a>
                                                <a asp-action="Details" asp-route-id="@it.ProductId"> Details </a>
                                                <a asp-action="Delete" asp-route-id="@it.ProductId">Details </a>

                                            }

                                                <button class="btn btn-lg cart-btn">Add to cart</button>
</div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
